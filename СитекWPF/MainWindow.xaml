<Window x:Class="СитекWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СитекWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Label Content="Данные обновлются каждые 2 секунды!!!" FontSize="16"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Выберите дату:" FontSize="18" Margin="0,0,10,0"/>
                    <ComboBox Text="{Binding Path=PathToTheDateTime, StringFormat={}{0:yyyy-MM-dd}}" x:Name="dateCombo" Width="225"/>
                    <Button x:Name="clearBtn" Content="Очистить" Margin="5,0,0,0" FontSize="18" Click="clearBtn_Click"/>
                    <Button x:Name="createReportBtn" Content="Создать отчёт" FontSize="18" Margin="5,0,0,0" Click="createReportBtn_Click"/>
                </StackPanel>
                <DataGrid x:Name="addrObjTable" Height="350" Width="900" AutoGenerateColumns="True"></DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
